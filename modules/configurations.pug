-var menu=["Post","Acerca de","Contacto"]

-var planets=["Mercurio","Venus","Tierra","Marte","Jupiter","Saturno","Urano","Neptuno"]

mixin planet(name, title, description)
  .planet 
    .planet__view 
      h2.planet__name= name
      img(src="images/planets/" + name + ".png").planet__image
    .planet__information(style="background-image: url(images/background/" + name + ".png)")
      p= title
      p= description
      
